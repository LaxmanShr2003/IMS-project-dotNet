@model IEnumerable<IMS.models.Entity.CategoryInfo>
<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-end" asp-action="AddEdit">AddNew</a>
    </div>
</div>


<div class="row col-12">
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(p=>p.CategoryName) </th>
                <th> @Html.DisplayNameFor(p => p.CategoryDescription)</th>
                <th>@Html.DisplayNameFor(p => p.IsActive) </th>
                <th> @Html.DisplayNameFor(p => p.ModifiedBy)</th>
                <th> @Html.DisplayNameFor(p => p.ModifiedDate) </th>
                <th>  @Html.DisplayNameFor(p => p.CreatedBy)</th>
                <th>  @Html.DisplayNameFor(p => p.CreatedDate)</th>
                @*  <th> Action</th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model)
            {
                <tr>
                    <td> @items.CategoryName </td>
                    <td> @items.CategoryDescription </td>
                    <td>@items.IsActive</td>
                    <td> @items.ModifiedBy</td>
                    <td> @items.ModifiedDate</td>
                    <td> @items.CreatedBy </td>
                    <td> @items.CreatedDate </td>
                    

                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="AddEdit" asp-route-id="@items.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@items.Id" class="btn btn-info">Details</a>
                        <a class="btn btn-danger" asp-action="Remove" onclick="alert('Are you sure you want to delete?')" asp-route-id="@items.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">

        <a class="btn mt-2 btn-secondary" asp-action="Index">Back to List</a>

    </div>
</div>